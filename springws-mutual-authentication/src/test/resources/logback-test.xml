<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- PROPERTIES -->
    <property name="layout"
        value="%d{HH:mm:ss.SSS} %-5level [%thread][%logger{0}] %m%n" />
    <property name="logFile" value="springws-mutual-authentication-test" />
    <property name="logFile-ws" value="springws-mutual-authentication-ws-test" />

    <!-- APPENDERS -->
    <appender name="LOG_FILE"
        class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${logFile}.log</File>
        <rollingPolicy
            class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${logFile}.%d{yyyy-MM-dd}.log
            </fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${layout}</pattern>
        </encoder>
    </appender>

    <appender name="LOG_FILE_WS"
        class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logFile-ws}.log</file>
        <rollingPolicy
            class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${logFile-ws}.%d{yyyy-MM-dd}.log
            </fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${layout}</pattern>
        </encoder>
    </appender>

    <appender name="LOG_STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${layout}</pattern>
        </encoder>
    </appender>

    <!-- LOGGERS -->
    <logger name="com.codenotfound" level="DEBUG" />

    <logger name="org.springframework" level="INFO" />

    <!-- log the SOAP messages in a dedicated file -->
    <logger name="org.springframework.ws.client.MessageTracing"
        level="TRACE" additivity="false">
        <appender-ref ref="LOG_FILE_WS" />
    </logger>
    <logger name="org.springframework.ws.server.MessageTracing"
        level="TRACE" additivity="false">
        <appender-ref ref="LOG_FILE_WS" />
    </logger>

    <root level="WARN">
        <appender-ref ref="LOG_FILE" />
        <appender-ref ref="LOG_STDOUT" />
    </root>

</configuration>